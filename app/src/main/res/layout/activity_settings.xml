<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                tools:context=".MainActivity"
                android:background="@drawable/ancient_art">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout2"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="#FFFFFF"
            android:alpha="0.50"
            android:text=" Volume: "
            android:id="@+id/volumeTextView"
            android:layout_marginRight="5dp"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:layout_marginTop="50dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"/>

        <SeekBar
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttons"
            android:alpha="0.50"
            android:id="@+id/volumeSeekBar"
            android:progress="50"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:background="#FFFFFF"
            android:alpha="0.50"
            android:text=" Repeat Interval (Min): "
            android:id="@+id/repeatInterval"
            android:layout_marginRight="5dp"
            android:textAlignment="center"
            android:paddingTop="5dp"
            />

        <EditText
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:paddingLeft="5dp"
            android:id="@+id/repeatIntervalInMinutes"
            android:textSize= "36dp"
            android:inputType="text"
            android:ems="10"
            android:background="@drawable/buttons"
            android:alpha="0.50"
            android:maxLength="4"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:text="0"/>

    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Block Reminders on Weekends"
        android:id="@+id/blockWeekends"
        android:background="@drawable/buttons"
        android:alpha="0.50"
        android:textAllCaps="false"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_marginTop="20dp"
        android:checked="false"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Block Reminders Outside 9 a.m. - 5 p.m."
        android:id="@+id/blockNonWorkDayHours"
        android:background="@drawable/buttons"
        android:alpha="0.50"
        android:textAllCaps="false"
        android:layout_below="@+id/blockWeekends"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:checked="false"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:alpha="0.50"
        android:textAllCaps="false"
        android:text="Back"
        android:id="@+id/backButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>
